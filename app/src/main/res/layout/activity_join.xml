<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context="com.oven.oven.layout.JoinActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10dp"/>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:src="@drawable/mail"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"/>
        <EditText
            android:background="@drawable/rectangle_background"
            android:id="@+id/et_join_mail"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="40dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:inputType="textWebEmailAddress"
            android:hint="  아이디(이메일)"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:src="@drawable/join_key"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"/>
        <EditText
            android:background="@drawable/rectangle_background"
            android:id="@+id/et_join_pw"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="40dp"
            android:hint="  비밀번호"
            android:textSize="15sp"
            android:inputType="textPassword"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:src="@drawable/join_key"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"/>
        <EditText
            android:background="@drawable/rectangle_background"
            android:id="@+id/et_join_pw2"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="40dp"
            android:hint="  비밀번호 확인"
            android:textSize="15sp"
            android:inputType="textPassword"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:src="@drawable/join_profile"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"/>
        <EditText
            android:background="@drawable/rectangle_background"
            android:id="@+id/et_join_uname"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:hint="  이름"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:src="@drawable/phone"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"/>
        <EditText
            android:background="@drawable/rectangle_background"
            android:id="@+id/et_join_hp"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:inputType="numberDecimal"
            android:hint="  휴대전화번호"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:src="@drawable/company"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"/>
        <EditText
            android:background="@drawable/rectangle_background"
            android:id="@+id/et_join_cname"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:hint="  업체명"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:src="@drawable/home"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"/>
        <LinearLayout
            android:background="@drawable/rectangle_background"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <EditText
                android:background="@android:color/transparent"
                android:id="@+id/et_join_address"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:focusable="false"
                android:hint="  주소"/>

            <Button
                android:id="@+id/btn_search_address_join"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="검색"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp">
        <EditText
            android:background="@drawable/rectangle_background"
            android:id="@+id/et_join_detailed_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:hint="  상세주소"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp">
        <EditText
            android:background="@drawable/rectangle_background"
            android:id="@+id/et_join_zipcode"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:hint="  우편번호"/>
    </LinearLayout>

    <Button
        android:background="@drawable/rectangle_background_button"
        android:id="@+id/btn_join_ok"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="회원가입"/>


    
</LinearLayout>
